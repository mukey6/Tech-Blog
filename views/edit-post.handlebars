<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class="edit-blog">
    Edit Blog
  </h2>
  <form class="edit-post-form">
    <div class="old-blog">
 <label for="post-title">Title</label>
      <input name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div  class="old-blog">
    <label for="post-text">Blog</label>
<textarea name="post-text" type="text">{{post.post_text}}</textarea> 
    </div>
    <div class="old-blog">
       by you on {{format_date post.created_at}}
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <div class="old-blog">
    <button type="submit" class="save-btn">Save Blog</button>
    <button type="button" class="delete-post-btn">Delete Blog</button>
    </div>
  </form>
</article>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>